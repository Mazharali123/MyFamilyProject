<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GuardFragment">

    <TextView
        android:id="@+id/text_sec"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="16dp"
        android:id="@+id/pinck_card"
        android:layout_width="match_parent"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_sec"
        android:layout_height="180dp"
        app:cardBackgroundColor="#f0737b"/>

    <TextView
        android:elevation="16dp"
        android:id="@+id/sos_text"
        app:layout_constraintStart_toStartOf="@id/pinck_card"
        app:layout_constraintTop_toTopOf="@id/pinck_card"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <ImageView

        android:layout_margin="16dp"
        android:id="@+id/sos_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:elevation="16dp"
        android:src="@drawable/ic_sos"
        app:layout_constraintBottom_toBottomOf="@+id/pinck_card"
        app:layout_constraintEnd_toEndOf="@id/pinck_card"
        app:layout_constraintTop_toTopOf="@+id/pinck_card" />

    <TextView
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/sos_text"
        android:id="@+id/sos_message"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/pinck_card"
        app:layout_constraintEnd_toStartOf="@id/sos_image"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:textColor="@color/white"
        android:text="In case of any emergency, keep telling family members to to contact me"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/green_card"
        app:cardElevation="16dp"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/pinck_card"
        android:layout_height="180dp"
        app:cardBackgroundColor="#63d2c8"/>
    <TextView
        android:elevation="16dp"
        android:id="@+id/guard_text"
        app:layout_constraintStart_toStartOf="@id/green_card"
        app:layout_constraintTop_toTopOf="@id/green_card"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guard"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <TextView
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/guard_text"
        android:id="@+id/guard_message"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/green_card"
        app:layout_constraintEnd_toStartOf="@id/guard_image"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:textColor="@color/white"
        android:text="In case of any emergency, keep telling family members to to contact me"/>

    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/guard_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:elevation="16dp"
        android:src="@drawable/shield"
        app:layout_constraintBottom_toBottomOf="@+id/green_card"
        app:layout_constraintEnd_toEndOf="@id/green_card"
        app:layout_constraintTop_toTopOf="@+id/green_card" />




</androidx.constraintlayout.widget.ConstraintLayout>